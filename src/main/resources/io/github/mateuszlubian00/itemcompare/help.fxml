<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.mateuszlubian00.itemcompare.controller.HelpController">
   <children>
      <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ScrollPane fitToHeight="true" fitToWidth="true" focusTraversable="false" VBox.vgrow="ALWAYS">
               <content>
                  <AnchorPane>
                     <children>
                        <VBox spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Label fx:id="text" text="Label" wrapText="true" />
                              <GridPane gridLinesVisible="true" styleClass="table" stylesheets="@../../../../css/help.css">
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
                                    <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
                                    <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
                                    <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
                                    <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
                                </rowConstraints>
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="References" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Explaination" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Modifiers" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Explaination" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                                    <Label text="atk" GridPane.rowIndex="1" />
                                    <Label text="attack value" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Label text="attack speed value; represents how many attacks to make per second" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Label text="value of a chance to critically strike; represented as a percent" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    <Label text="health value (currently unused)" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    <Label text="defense value; negatively affects the damage taken" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                    <Label text="i_ modifier selects the statistic of an item" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                                    <Label text="e_ modifier selects the base statistic of a character that is not self; in other words, an enemy" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                                    <Label text="t_ modifier selects the total statistic of a character" GridPane.columnIndex="3" GridPane.rowIndex="4" />
                                    <Label text="reference without a modifier refers to base statistic of a character" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                                    <Label text="atkspd" GridPane.rowIndex="2" />
                                    <Label text="crit" GridPane.rowIndex="3" />
                                    <Label text="hp" GridPane.rowIndex="4" />
                                    <Label text="def" GridPane.rowIndex="5" />
                                    <Label text="reference" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                    <Label text="i_ + reference" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                    <Label text="e_ + reference" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                                    <Label text="t_ + reference" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                                 </children>
                              </GridPane>
                              <Label fx:id="examples" text="Label" wrapText="true" />
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="50.0" />
                     </padding>
                  </AnchorPane>
               </content>
            </ScrollPane>
            <Button mnemonicParsing="false" onAction="#closeHelp" text="OK">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
